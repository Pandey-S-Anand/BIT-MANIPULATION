class Solution {
    public static int muntiplyBy3Point5(int num) {
        int multiplyByThreeAndHalf = ((num << 0) + (num << 1) + (num >> 1));
        return multiplyByThreeAndHalf;
    }
}

/*
 * x*3.5=x*(3+(1/2))=x*(1+2+(1/2))=x+2x+(x/2)=(x<<0)+(x<<1)+(x>>1)
 * 
 * we know:
 * x<<y = x*2^y
 * 
 * if(y==1)
 * x<<1 =x*2^1=2x
 * 
 * similarly
 * 
 * if(y==0)
 * x<<0=x*2^0=x
 * 
 * also
 * 
 * x>>y=x/2^y
 * 
 * if(y==1)
 * x>>1=x/2
 */
