public class Solution {
    public int reverseBits(int n) {
        int reversed = 0;

        for (int i = 0; i < 32; i++) {
            int mask = 1 << (31 - i);
            if (isBitSetAtPosition(n, i)) {
                reversed = reversed | mask;
            }

        }
        return reversed;
    }

    private static boolean isBitSetAtPosition(int n, int k) {
        int mask = 1 << k;
        return (n & mask) != 0;
    }
}
