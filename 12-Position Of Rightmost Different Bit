class Solution {
    public static int posOfRightMostDiffBit(int num1, int num2) {
        int xor = num1 ^ num2;
        return posOfRightMostSetBit(xor);
    }

    private static int posOfRightMostSetBit(int num) {
        if (num == 0) {
            return -1;
        }

        int position = 0;

        while (num != 0)
            if ((num & 1) != 0) {
                position++;// counting the position of first set bit
                break;
            } else {
                position++;
                num = num >> 1;
            }

        return position;
    }
}
